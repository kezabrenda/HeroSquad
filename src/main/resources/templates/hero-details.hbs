{{#partial "content"}}
    <p xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html"
       xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html"
       xmlns="http://www.w3.org/1999/html"><strong>Heroes:</strong></p>
    <p><strong>Hero Name:</strong> {{ hero.name }}</p>
    <p><strong>Age:</strong> {{ hero.age }}</p>
    <p><strong>Special Power:</strong> {{ hero.specialPower }}</p>
    <p><strong>Weakness:</strong> {{ hero.weakness }}</p>
    <h5><strong>Created At:</strong> {{ hero.createdAt }}</h5>
    <h5>Heroes status:</h5>
    <p>
        {{#if hero.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}
        <a href="/hero/{{hero.id}}/update">Edit this hero</a>
        <a href="/hero/{{hero.id}}/delete">DELETE this hero (no undo)</a>
    </p>
{{/partial}}

{{> layout.hbs}}