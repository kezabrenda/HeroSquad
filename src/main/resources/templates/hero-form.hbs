{{#partial "content"}}

        <h1>Add a new Hero!</h1>
        <form action="/hero" href="/hero" method="post" style="padding:100px;">
            <div class="form-group">
                <label for="name">Hero's name</label>
                <input id="name" type="text" placeholder="Enter your hero's name" class="form-control" name="name" required>
            </div>

            <div class="form-group">
                <label for="age">Hero's age</label>
                <input id="age" type="number"  placeholder="Enter your hero's age" class="form-control" name="age" required>
            </div>
            <div class="form-group">
                <label for="specialPower">Hero's special powers</label>
                <input id="specialPower" type="text" placeholder="Enter your hero's special powers" class="form-control" name="specialPower" required>
            </div>

            <div class="form-group">
                <label for="specialPower">Hero's weakness</label>
                <input id="weakness" type="text" placeholder="Enter your hero's weakness" class="form-control" name="weakness" required>
            </div>

           <button type="submit" class="btn btn-default">Go!</button>
           <button><a href="/">Go Back</a></button>
        </form>

{{/partial}}

{{> layout.hbs}}