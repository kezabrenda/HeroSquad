{{#partial "content"}}
    <p xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html"><strong>Squads:</strong></p>
    <p><strong>Squad Name:</strong> {{ squad.name }}</p>
    <p><strong>Squad Size:</strong> {{ squad.maxSize }}</p>
    <p><strong>Squad Mission:</strong> {{ squad.cause }}</p>
    <h5><strong>Created At:</strong> {{ squad.createdAt }}</h5>
    <h5>Squad status:</h5>
    <p>
        {{#if squad.updated }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}
        <a href="/squad/{{squad.id}}/update">Edit this squad</a>
        <a href="/squad/{{squad.id}}/delete">DELETE this squad (no undo)</a>
    </p>
{{/partial}}

{{> layout.hbs}}