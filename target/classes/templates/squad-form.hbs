{{#partial "content"}}
    <h1>Add a new Squad!</h1>
    <form action="/squad" method="post" style="padding:100px;">
        <div class="form-group">
            <label for="maxsize">Squad max size</label>
            <input id="maxsize" type="number" placeholder="Enter your squad's maximum size" class="form-control" name="maxSize" required>
        </div>

        <div class="form-group">
            <label for="name">Squad name</label>
            <input id="name" type="text"  placeholder="Enter your squad name" class="form-control" name="name" required>
        </div>

        <div class="form-group">
            <label for="cause">Squad mission</label>
            <input id="cause" type="text" placeholder="Enter mission" class="form-control" name="cause" required>
        </div>

        <button type="submit" class="btn btn-default">Go!</button>
        <button><a href="/">Go Back</a></button>
    </form>

{{/partial}}

{{> layout.hbs}}